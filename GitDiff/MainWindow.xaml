<Window x:Class="GitDiff.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:vm="clr-namespace:GitDiff.ViewModels"
        xmlns:converters="clr-namespace:GitDiff.Converters"
        mc:Ignorable="d"
        Title="Git Diff Extractor"
        Height="800" Width="1100"
        MinHeight="600" MinWidth="800"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesign.Brush.Background}"
        FontFamily="{materialDesign:MaterialDesignFont}">

    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Window.Resources>
        <converters:StatusToColorConverter x:Key="StatusToColorConverter" />
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <converters:NullToBoolConverter x:Key="NullToBoolConverter" />
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="3*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <materialDesign:ColorZone Grid.Row="0" Mode="PrimaryMid" Padding="16" materialDesign:ElevationAssist.Elevation="Dp4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <materialDesign:PackIcon Grid.Column="0" Kind="Git" Width="28" Height="28" VerticalAlignment="Center" Margin="0,0,12,0" />
                <TextBox Grid.Column="1"
                         Text="{Binding RepositoryPath, UpdateSourceTrigger=PropertyChanged}"
                         materialDesign:HintAssist.Hint="リポジトリパス"
                         materialDesign:TextFieldAssist.HasClearButton="True"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Foreground="White"
                         materialDesign:HintAssist.Foreground="LightGray"
                         VerticalAlignment="Center"
                         Margin="0,0,8,0" />
                <Button Grid.Column="2"
                        Command="{Binding BrowseRepositoryCommand}"
                        Content="Browse"
                        Style="{StaticResource MaterialDesignOutlinedLightButton}" />
            </Grid>
        </materialDesign:ColorZone>

        <!-- Filters -->
        <materialDesign:Card Grid.Row="1" Margin="16,12,16,0" Padding="16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="16" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <materialDesign:PackIcon Grid.Column="0" Kind="AccountFilter" VerticalAlignment="Center" Margin="0,0,8,0" />
                <ComboBox Grid.Column="1"
                          ItemsSource="{Binding Committers}"
                          SelectedItem="{Binding SelectedCommitter}"
                          materialDesign:HintAssist.Hint="Committer"
                          IsEditable="False"
                          Style="{StaticResource MaterialDesignOutlinedComboBox}"
                          materialDesign:ComboBoxAssist.ShowSelectedItem="True">
                    <ComboBox.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="クリア" Click="ClearCommitterFilter_Click" />
                        </ContextMenu>
                    </ComboBox.ContextMenu>
                </ComboBox>

                <materialDesign:PackIcon Grid.Column="3" Kind="FolderSearch" VerticalAlignment="Center" Margin="0,0,8,0" />
                <TextBox Grid.Column="4"
                         Text="{Binding FolderFilter, UpdateSourceTrigger=PropertyChanged, Delay=300}"
                         materialDesign:HintAssist.Hint="フォルダパスで絞り込み (例: src/)"
                         materialDesign:TextFieldAssist.HasClearButton="True"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}" />
            </Grid>
        </materialDesign:Card>

        <!-- Commit List -->
        <materialDesign:Card Grid.Row="2" Margin="16,12,16,0" Padding="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Commits" Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                           Margin="16,12,16,8" />

                <DataGrid Grid.Row="1"
                          ItemsSource="{Binding Commits}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          CanUserSortColumns="True"
                          CanUserResizeColumns="True"
                          HeadersVisibility="Column"
                          GridLinesVisibility="Horizontal"
                          BorderThickness="0"
                          Margin="0">
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="" Width="Auto" CanUserSort="False">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="4,0">
                                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                                                Content="Base"
                                                FontSize="11"
                                                Padding="4,2"
                                                Height="24"
                                                Command="{Binding DataContext.SetBaseCommitCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}" />
                                        <Button Style="{StaticResource MaterialDesignFlatSecondaryButton}"
                                                Content="Target"
                                                FontSize="11"
                                                Padding="4,2"
                                                Height="24"
                                                Command="{Binding DataContext.SetTargetCommitCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}"
                                                Margin="4,0,0,0" />
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="Hash" Binding="{Binding ShortHash}" Width="80" />
                        <DataGridTextColumn Header="Message" Binding="{Binding Message}" Width="*" />
                        <DataGridTextColumn Header="Author" Binding="{Binding Author}" Width="120" />
                        <DataGridTextColumn Header="Date" Binding="{Binding DateString}" Width="130" />
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </materialDesign:Card>

        <!-- Selected Commits Info + Compare Button -->
        <materialDesign:Card Grid.Row="3" Margin="16,12,16,0" Padding="12,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <materialDesign:Chip Content="{Binding BaseCommit.DisplayText, FallbackValue='(Base未選択)'}"
                                         IconBackground="{DynamicResource PrimaryHueMidBrush}"
                                         IconForeground="{DynamicResource PrimaryHueMidForegroundBrush}">
                        <materialDesign:Chip.Icon>
                            <materialDesign:PackIcon Kind="SourceBranch" />
                        </materialDesign:Chip.Icon>
                    </materialDesign:Chip>

                    <materialDesign:PackIcon Kind="ArrowRight" VerticalAlignment="Center" Margin="8,0" Width="24" Height="24" />

                    <materialDesign:Chip Content="{Binding TargetCommit.DisplayText, FallbackValue='(Target未選択)'}"
                                         IconBackground="{DynamicResource SecondaryHueMidBrush}"
                                         IconForeground="{DynamicResource SecondaryHueMidForegroundBrush}">
                        <materialDesign:Chip.Icon>
                            <materialDesign:PackIcon Kind="SourceBranch" />
                        </materialDesign:Chip.Icon>
                    </materialDesign:Chip>
                </StackPanel>

                <Button Grid.Column="1"
                        Command="{Binding CompareCommand}"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        materialDesign:ButtonAssist.CornerRadius="4"
                        Padding="24,8">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Compare" Margin="0,0,8,0" />
                        <TextBlock Text="Compare" />
                    </StackPanel>
                </Button>
            </Grid>
        </materialDesign:Card>

        <!-- Diff File List -->
        <materialDesign:Card Grid.Row="4" Margin="16,12,16,0" Padding="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="16,12,16,8">
                    <TextBlock Text="Diff Files" Style="{StaticResource MaterialDesignSubtitle1TextBlock}" />
                    <materialDesign:Badged Badge="{Binding DiffFileCount}" Margin="16,0,0,0" VerticalAlignment="Center"
                                           BadgeColorZoneMode="PrimaryMid" />
                </StackPanel>

                <DataGrid Grid.Row="1"
                          ItemsSource="{Binding DiffFiles}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          CanUserSortColumns="True"
                          CanUserResizeColumns="True"
                          HeadersVisibility="Column"
                          GridLinesVisibility="Horizontal"
                          BorderThickness="0">
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="Status" Width="90" SortMemberPath="StatusText">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding StatusText}"
                                               Foreground="{Binding Status, Converter={StaticResource StatusToColorConverter}}"
                                               FontWeight="Bold" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="File Path" Binding="{Binding FilePath}" Width="*" />
                        <DataGridTextColumn Header="Old Path" Binding="{Binding OldPath}" Width="200" />
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </materialDesign:Card>

        <!-- Export Section -->
        <materialDesign:Card Grid.Row="5" Margin="16,12,16,0" Padding="12,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <materialDesign:PackIcon Grid.Column="0" Kind="FolderOpen" VerticalAlignment="Center" Margin="0,0,8,0" />
                <TextBox Grid.Column="1"
                         Text="{Binding OutputPath, UpdateSourceTrigger=PropertyChanged}"
                         materialDesign:HintAssist.Hint="出力先フォルダ"
                         materialDesign:TextFieldAssist.HasClearButton="True"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Margin="0,0,8,0" />
                <Button Grid.Column="2"
                        Command="{Binding BrowseOutputFolderCommand}"
                        Content="Browse"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Margin="0,0,8,0" />
                <Button Grid.Column="3"
                        Command="{Binding ExportCommand}"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        materialDesign:ButtonAssist.CornerRadius="4">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Export" Margin="0,0,8,0" />
                        <TextBlock Text="Export" />
                    </StackPanel>
                </Button>
            </Grid>
        </materialDesign:Card>

        <!-- Status Bar -->
        <materialDesign:ColorZone Grid.Row="6" Mode="PrimaryDark" Padding="16,8" Margin="0,12,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="{Binding StatusMessage}" VerticalAlignment="Center" />
                <ProgressBar Grid.Column="1"
                             Style="{StaticResource MaterialDesignCircularProgressBar}"
                             IsIndeterminate="True"
                             Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
                             Value="0"
                             Width="20" Height="20" />
            </Grid>
        </materialDesign:ColorZone>
    </Grid>
</Window>
